#!/bin/sh

set -e

KERNEL_VERSION="@KERNEL_VERSION@"

KERNEL_IMAGE_PATH="/boot/@KERNEL_IMAGE_PKGNAME@-${KERNEL_VERSION}"

if [ "${1}" != "remove" ]; then
    exit 0
fi

linux-check-removal "${KERNEL_VERSION}"

if [ -d "/etc/kernel/prerm.d" ]; then
    DEB_MAINT_PARAMS="${*}" run-parts \
        --report \
        --exit-on-error \
        --arg="${KERNEL_VERSION}" \
        --arg="${KERNEL_IMAGE_PATH}" \
        "/etc/kernel/prerm.d"
fi

exit 0
